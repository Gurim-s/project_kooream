<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.kooream.mapper.RntReviewMapper">
	
	<!-- 리뷰 등록 -->
	<insert id="rgstReview" parameterType="com.kooream.domain.RntReviewVO">
		INSERT INTO REVIEW_TBL(RP_IDX, P_NO, RP_CONTENT, RATING) 
		VALUES(rp_idx_seq.NEXTVAL, #{p_no}, #{rp_content}, #{rating})
	</insert>
	
	<!-- 리뷰 리스트 불러오기 -->
	<select id="getReview" parameterType="com.kooream.domain.ProductVO" resultType="com.kooream.domain.RntReviewVO">
		SELECT * FROM REVIEW_TBL WHERE P_NO = #{p_no}
	</select>
	
	
</mapper>